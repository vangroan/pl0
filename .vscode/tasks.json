{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: format all",
            "type": "cargo",
            "command": "fmt --all",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "rust: cargo clippy",
            "type": "cargo",
            "command": "clippy",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "rust: test",
            "type": "cargo",
            "command": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "rust: test all",
            "dependsOn": ["rust: format all", "rust: cargo clippy", "rust: test"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}